{
  "name": "plugins-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "turbo:fix": "pnpm dlx rimraf ./node_modules && pnpm install && pnpm turbo scan",
    "generate": "turbo gen",
    "postgenerate": "pnpm install",
    "build": "turbo build",
    "dev": "pnpm turbo dev --filter=test-studio",
    "format": "oxfmt . --no-error-on-unmatched-pattern",
    "prelint": "pnpm preoxlint",
    "lint": "turbo run oxlint lint",
    "lint:ci": "turbo run lint -- -f gha --max-warnings 0",
    "preoxlint": "pnpm build --filter='!test-studio'",
    "oxlint": "oxlint --type-check --type-aware --deny-warnings",
    "release": "changeset publish",
    "postinstall": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,jsonc,md}": [
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@turbo/gen": "^2.6.3",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript/native-preview": "catalog:",
    "eslint-formatter-gha": "^1.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.5",
    "setup-npm-trusted-publish": "^1.0.3",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "validate-npm-package-name": "^7.0.0"
  },
  "packageManager": "pnpm@10.25.0"
}
